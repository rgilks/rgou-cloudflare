{
  "name": "rgou-cloudflare",
  "version": "0.1.0",
  "description": "Royal Game of Ur - Ancient Mesopotamian board game with AI opponent",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "build:cf": "open-next build",
    "deploy:cf": "npm run build:cf && wrangler deploy",
    "dev:worker": "cd worker && npm run dev",
    "build:worker": "cd worker && npm run build",
    "deploy:worker": "cd worker && npm run deploy",
    "setup:worker": "cd worker && npm install",
    "build:wasm": "cd worker/rust_ai_core && wasm-pack build --target web --out-name rgou_ai_worker",
    "postbuild": "npm run build:wasm && rm -rf src/lib/wasm && mv worker/rust_ai_core/pkg src/lib/wasm && mkdir -p public/wasm && cp src/lib/wasm/rgou_ai_worker_bg.wasm public/wasm/",
    "nuke": "rm -rf .next .open-next .wrangler node_modules package-lock.json && npm install && npm run dev"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.519.0",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.3.1",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.20.1"
  }
}
