{
  "name": "rgou-cloudflare",
  "version": "0.1.0",
  "description": "Royal Game of Ur - Ancient Mesopotamian board game with AI opponent",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "pretty": "prettier --write '**/*.*'",
    "build:cf": "next build",
    "deploy:cf": "npm run build:cf && wrangler deploy",
    "deploy:worker": "cd worker && wrangler deploy",
    "build:wasm": "cd worker/rust_ai_core && wasm-pack build --target web --out-name rgou_ai_worker",
    "build:wasm-assets": "npm run build:wasm && rm -rf src/lib/wasm && mv worker/rust_ai_core/pkg src/lib/wasm && mkdir -p public/wasm && cp src/lib/wasm/rgou_ai_worker_bg.wasm public/wasm/",
    "prebuild": "npm run build:wasm-assets",
    "nuke": "rm -rf .next .open-next .wrangler node_modules package-lock.json && npm install && npm run dev",
    "generate:icons": "node scripts/generate-icons.cjs",
    "pwa:build": "npm run generate:icons && npm run build",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "npm run verify",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.19.2",
    "lucide-react": "^0.525.0",
    "immer": "^10.1.1",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.22.0"
  }
}
