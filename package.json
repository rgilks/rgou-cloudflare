{
  "name": "rgou-cloudflare",
  "version": "0.1.0",
  "description": "Royal Game of Ur - Ancient Mesopotamian board game with AI opponent",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run build:wasm-assets && next build",
    "build:cf": "npx @opennextjs/cloudflare build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "pretty": "prettier --write '**/*.*'",
    "deploy:worker": "cd worker && wrangler deploy",
    "build:wasm": "cd worker/rust_ai_core && wasm-pack build --target web --out-name rgou_ai_core -- --features wasm",
    "build:wasm-assets": "npm run build:wasm && rm -rf public/wasm && mkdir -p public/wasm && cp worker/rust_ai_core/pkg/rgou_ai_core_bg.wasm public/wasm/ && cp worker/rust_ai_core/pkg/rgou_ai_core.js public/wasm/",
    "nuke": "rm -rf .next .open-next .wrangler node_modules package-lock.json && npm install && npm run dev",
    "pwa:build": "npm run generate:icons && npm run build",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "npm run verify && (cd worker/rust_ai_core && cargo test)",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "migrate:generate": "drizzle-kit generate",
    "migrate:d1": "wrangler d1 migrations apply rgou-db --remote",
    "migrate:local": "drizzle-kit push --config=drizzle.config.local.ts",
    "db:exec": "npx wrangler d1 execute rgou-db --remote --file"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.9.1",
    "better-sqlite3": "^11.10.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.19.2",
    "immer": "^10.1.1",
    "lucide-react": "^0.525.0",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.3.1",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "typescript-eslint": "^8.34.1",
    "wrangler": "^4.22.0"
  }
}
