{
  "name": "rgou-cloudflare",
  "version": "1.0.0",
  "description": "Royal Game of Ur - Ancient Mesopotamian board game with AI opponent",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run generate:sw && next dev --turbopack",
    "build": "npm run generate:sw && npm run build:wasm-assets && next build",
    "build:cf": "npm run generate:sw && npm run build:wasm-assets && npx @opennextjs/cloudflare build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "pretty": "prettier --write '**/*.*'",
    "deploy:worker": "cd worker && wrangler deploy",
    "generate:sw": "GITHUB_SHA=$GITHUB_SHA node scripts/generate-sw.js",
    "build:wasm": "cd worker/rust_ai_core && wasm-pack build --target web --out-name rgou_ai_worker -- --features wasm",
    "build:wasm-assets": "npm run build:wasm && rm -rf public/wasm && mkdir -p public/wasm && cp worker/rust_ai_core/pkg/rgou_ai_worker_bg.wasm public/wasm/rgou_ai_core_bg.wasm && cp worker/rust_ai_core/pkg/rgou_ai_worker.js public/wasm/rgou_ai_core.js",
    "nuke": "rm -rf .next .open-next .wrangler node_modules package-lock.json && npm install && npm run dev",
    "pwa:build": "npm run generate:icons && npm run build",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "npm run verify && (cd worker/rust_ai_core && cargo test) && npm run test:coverage && npm run test:e2e",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:ui": "playwright test --ui",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "migrate:generate": "drizzle-kit generate",
    "migrate:d1": "wrangler d1 migrations apply rgou-db --remote",
    "migrate:local": "drizzle-kit push --config=drizzle.config.local.ts",
    "train:ml": "python scripts/train_ml_ai.py --use-rust-ai",
    "train:ml:synthetic": "python scripts/train_ml_ai.py --synthetic",
    "build:rust-ai": "cd worker/rust_ai_core && cargo build --release",
    "load:ml-weights": "tsx scripts/load-ml-weights.ts",
    "db:local:reset": "tsx scripts/reset-local-db.ts",
    "db:exec": "npx wrangler d1 execute rgou-db --remote --file",
    "version:update": "node scripts/update-versions.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.19.2",
    "immer": "^10.1.1",
    "lucide-react": "^0.525.0",
    "next": "^15.3.4",
    "pako": "^2.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250711.0",
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.3.1",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24",
    "@types/pako": "^2.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jsdom": "^25.0.1",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.6.2",
    "raw-loader": "^4.0.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "typescript-eslint": "^8.34.1",
    "vitest": "^2.1.8",
    "wrangler": "^4.22.0"
  }
}
